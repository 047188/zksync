#!/bin/bash

cd `dirname $0`/..

. ./env
cd server

PROCESS_ID=`ps aux | grep target/release/server | grep -v grep | grep -o -E '[0-9]+'  | head -1 | sed -e 's/^0\+//'`

if [ -z "$PROCESS_ID" ]
then
    cargo run --release --bin server
else
    echo "Server already running at PID $PROCESS_ID; run stop to kill it."
fi
