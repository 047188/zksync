#!/bin/bash

set -e

check-environment.sh

[ ! -z $CI ] || zksync dev-up
zksync env
zksync yarn || true # It can fail.
zksync plonk-setup check || zksync plonk-setup download
zksync verify-keys unpack
zksync db-setup
zksync build-dev-contracts
zksync deploy-dev-erc20
zksync build-contracts
zksync genesis
zksync redeploy
echo done.
