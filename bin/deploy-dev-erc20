#!/bin/bash

. .setup_env
cd contracts/
echo "Deploying ERC20 token for localhost"

echo "[" > $ZKSYNC_HOME/etc/tokens/localhost.json

yarn --silent deploy-dev-erc20 --name DAI --symbol DAI --decimals 18  >> $ZKSYNC_HOME/etc/tokens/localhost.json
echo -n "," >> $ZKSYNC_HOME/etc/tokens/localhost.json

yarn --silent deploy-dev-erc20 --name wBTC --symbol wBTC --decimals 8 >> $ZKSYNC_HOME/etc/tokens/localhost.json
echo -n "," >> $ZKSYNC_HOME/etc/tokens/localhost.json

yarn --silent deploy-dev-erc20 --name BAT --symbol BAT --decimals 18 >> $ZKSYNC_HOME/etc/tokens/localhost.json
echo -n "," >> $ZKSYNC_HOME/etc/tokens/localhost.json

yarn --silent deploy-dev-erc20 --name MLTT --symbol MLTT --decimals 18 >> $ZKSYNC_HOME/etc/tokens/localhost.json

echo "]" >> $ZKSYNC_HOME/etc/tokens/localhost.json
